<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h2>You can find here the cocktails currently available:</h2>
        <% @cocktails.each do |cocktail| %>
          <% if cocktail.photo.present? %>
            <div class="cocktail-index-card">
              <%= cl_image_tag(cocktail.photo, class: 'home-card') %>
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
          <% end %>
        <% end %>
        <ul>
          <% @cocktails.each do |cocktail| %>
          <li><%= link_to cocktail.name, cocktail_path(cocktail[:id]) %>
            <%= link_to "🗑️", cocktail_path(cocktail[:id]),
                      method: :delete,
                      data: { confirm: "Are you sure?" }%></li>
          <% end %>
        </ul>
      <p><%= link_to "Create a new cocktail", new_cocktail_path %></p>
    </div>
  </div>
</div>
