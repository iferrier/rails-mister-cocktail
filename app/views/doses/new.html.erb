<%= render 'shared/navbar' %>
<div class="container">
  <h1>Add ingredients to your <%= @cocktail.name %> here</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.submit "Add the ingredient", class: "btn-cocktail" %>
  <% end %>
  <p class= 'back-btn'><%= link_to "Back to All Cocktails", cocktails_path, class: 'btn' %></p>
</div>

